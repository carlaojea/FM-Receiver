# -------------------------------------------------------------
#   RADIO FM SI4703 + PANTALLA SH1106 + 4 BOTONES
#   Requiere: Archivo 'sh1106.py' (Tu librería)
# -------------------------------------------------------------

from machine import Pin, I2C
import time
import sh1106  # <--- IMPORTAMOS TU LIBRERÍA AQUÍ

# =============================================================
#  1. DRIVER RADIO SI4703 (Motor de la radio)
# =============================================================
class SI4703_Driver:
    I2C_ADDR = 0x10
    
    def __init__(self, i2c, pin_rst, pin_sdio):
        self.i2c = i2c
        self.rst = Pin(pin_rst, Pin.OUT)
        self.sdio = Pin(pin_sdio, Pin.OUT)
        self.shadow = [0] * 16 

    def init(self):
        # Secuencia de Reset Hard
        self.sdio.value(0); time.sleep_ms(10)
        self.rst.value(0); time.sleep_ms(10)
        self.rst.value(1); time.sleep_ms(10)
        
        # Encender Oscilador
        self._read(); self.shadow[0x07] = 0x8100; self._write()
        time.sleep_ms(500) 
        
        # Encender Audio
        self._read(); self.shadow[0x02] = 0x4001; self.shadow[0x05] |= 1; self._write()
        time.sleep_ms(110)

    def set_vol(self, v):
        v = max(0, min(15, v))
        self._read(); self.shadow[0x05] = (self.shadow[0x05] & 0xFFF0) | v
        self._write()

    def tune(self, freq):
        # Ir a frecuencia exacta
        channel = int((freq - 87.5) / 0.1)
        self._read(); self.shadow[0x03] = (self.shadow[0x03] & 0xFE00) | channel | (1 << 15)
        self._write(); self._wait_stc(); self.shadow[0x03] &= ~(1 << 15); self._write()

    def seek(self, up=True):
        # Buscar siguiente emisora
        self._read()
        if up: self.shadow[0x02] |= (1 << 9)
        else: self.shadow[0x02] &= ~(1 << 9)
        self.shadow[0x02] |= (1 << 8); self._write(); self._wait_stc(); self.shadow[0x02] &= ~(1 << 8); self._write()

    def get_info(self):
        self._read()
        return 87.5 + ((self.shadow[0x0B] & 0x03FF) * 0.1), self.shadow[0x05] & 0x0F, self.shadow[0x0A] & 0xFF

    def _wait_stc(self):
        while True:
            self._read()
            if self.shadow[0x0A] & (1 << 14): break
            time.sleep_ms(20)

    def _read(self):
        try:
            d = self.i2c.readfrom(self.I2C_ADDR, 32)
            idx = 0x0A
            for i in range(0, 32, 2):
                self.shadow[idx] = (d[i] << 8) | d[i+1]
                idx = (idx + 1) if idx < 0x0F else 0
        except: pass 
    def _write(self):
        b=bytearray(12); x=0
        for r in range(0x02, 0x08):
            b[x]=(self.shadow[r]>>8)&0xFF; b[x+1]=self.shadow[r]&0xFF; x+=2
        self.i2c.writeto(self.I2C_ADDR, b)

# =============================================================
#  2. INTERFAZ GRÁFICA (DIBUJAR EN TU PANTALLA)
# =============================================================
def actualizar_pantalla(oled, freq, vol, rssi, mensaje_estado=""):
    oled.fill(0)
    
    # Cabecera
    oled.text("RADIO FM", 35, 0)
    oled.hline(0, 10, 128, 1)

    if mensaje_estado != "":
        # Si estamos buscando, mostrar mensaje
        oled.text(mensaje_estado, 20, 30)
    else:
        # Frecuencia Grande
        oled.text("FREQ:", 0, 20)
        oled.text(f"{freq:.1f} MHz", 45, 20)

        # Volumen
        oled.text("VOL :", 0, 40)
        oled.text(f"{vol}", 45, 40)
        
        # Barra de Volumen visual
        oled.rect(65, 40, 60, 8, 1)
        ancho = int((vol/15) * 58)
        oled.fill_rect(67, 42, ancho, 4, 1)

        # Señal (RSSI)
        oled.text(f"Sig:{rssi}", 80, 55)

    oled.show()

# =============================================================
#  3. PROGRAMA PRINCIPAL
# =============================================================
if __name__ == "__main__":
    # Pines I2C
    PIN_SDA = 21; PIN_SCL = 22; PIN_RST = 4
    
    # Botones (PULL_UP: Pulsado es 0)
    btn_vol_up    = Pin(13, Pin.IN, Pin.PULL_UP)
    btn_vol_down  = Pin(12, Pin.IN, Pin.PULL_UP)
    btn_freq_up   = Pin(27, Pin.IN, Pin.PULL_UP) # Busca siguiente
    btn_freq_down = Pin(14, Pin.IN, Pin.PULL_UP) # Busca anterior

    # 1. Iniciar I2C (Canal 1, que es el que te funciona)
    print("Iniciando I2C Canal 1...")
    i2c = I2C(1, scl=Pin(PIN_SCL), sda=Pin(PIN_SDA), freq=100000)

    # 2. Iniciar Pantalla usando TU librería
    oled = None
    try:
        print("Iniciando Pantalla SH1106...")
        # Usamos la clase SH1106_I2C que está dentro de tu archivo sh1106.py
        oled = sh1106.SH1106_I2C(128, 64, i2c)
        oled.fill(0); oled.text("Iniciando...", 20, 30); oled.show()
    except Exception as e:
        print(f"ERROR PANTALLA: {e}")
        print("Verifica que 'sh1106.py' está guardado en el ESP32.")

    # 3. Iniciar Radio
    print("Iniciando Radio...")
    radio = SI4703_Driver(i2c, PIN_RST, PIN_SDA)
    radio.init()
    
    # Configuración inicial
    vol_actual = 5
    radio.set_vol(vol_actual)
    radio.tune(101.5) # Frecuencia de arranque
    
    print("Sistema Listo. Botones activos.")

    # 4. Bucle Infinito
    while True:
        accion = False
        estado = ""
        
        # --- VOLUMEN ---
        if btn_vol_up.value() == 0:
            if vol_actual < 15:
                vol_actual += 1
                radio.set_vol(vol_actual)
                accion = True
                time.sleep(0.15) # Anti-rebote

        elif btn_vol_down.value() == 0:
            if vol_actual > 0:
                vol_actual -= 1
                radio.set_vol(vol_actual)
                accion = True
                time.sleep(0.15)

        # --- FRECUENCIA (BUSCAR) ---
        elif btn_freq_up.value() == 0:
            if oled: actualizar_pantalla(oled, 0, 0, 0, "Buscando >>")
            radio.seek(True) # Buscar Arriba
            accion = True
            time.sleep(0.3) 

        elif btn_freq_down.value() == 0:
            if oled: actualizar_pantalla(oled, 0, 0, 0, "<< Buscando")
            radio.seek(False) # Buscar Abajo
            accion = True
            time.sleep(0.3)

        # Refrescar pantalla
        if accion or True: # Refrescar siempre para ver la señal RSSI en tiempo real
            f, v, r = radio.get_info()
            vol_actual = v # Sincronizar
            if oled: actualizar_pantalla(oled, f, v, r)
        
        time.sleep(0.1)